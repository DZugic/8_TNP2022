\section{Zvuk}

\begin{frame}[fragile]\frametitle{Šta je zapravo zvuk?}
	\begin{itemize}	
 
		\item Zvuk je vibracija koja se širi kroz vazduh ili neku drugu sredinu u vidu talasa.
            \item Čovek može čuje zvuk jačine od 16 do 20000 Hz.
		\item Osnovne karakteristike zvuka su: \textbf{visina}, \textbf{boja} i \textbf{jačina}.
	
	\end{itemize}
\end{frame}


\section{Načini zapisa zvuka}
\subsection{Analognizapis zvuka}
\begin{frame}[fragile]\frametitle{Kako je sve počelo?}
	\begin{itemize}	
		\item Snimanje zvuka je počelo tako što su se zapisivale vibracije koje ljudsko uho registruje kao zvuk na neku vrstu medija.
		\item Fonoautograf
		\item Magnetna traka
            \item Kompaktna traka
	\end{itemize}
\end{frame}
\subsection{Digitalni zapis zvuka}
\begin{frame}[fragile]\frametitle{Počeci digitalizacije}
	\begin{itemize}	
		\item Početkom 1969. godine prvi put je uspešno realizovana računarska obrada zvuka koja je dovela do njegove digitalne transformacije.
		\item PCM procesori
		\item Kompaktni diskovi
            \item CD-RW
            \item MP3
	\end{itemize}
\end{frame}

\section{Zakljucak}

\begin{frame}[fragile]\frametitle{Kako ljudi uče?}
	\begin{itemize}	
		\item Ljudi ne komuniciraju samo rečima. Prema nekim
		istraživanjima:
		\begin{itemize}
			\item samo 8\% poruke se prenese samim rečima (verbalna komunikacija)
			\item 37\% se prenesi bojom glasa, tonalitetom, pauzama u govoru (paralingvističkim znakovima)
			\item 55\% poruke se prenosi govorom tela: pratećim pokretima, izrazom lica i
			očiju, stavom tela i drugo (neverbalna komunikacija)
		\end{itemize}
		\item Verbalnim putem se najčešće prenose činjenice i
		sirove informacije, dok se neverbalnim putem prenose stavovi i
		emocionalni odnos prema činjenicama koje izlažemo.
	\end{itemize}
\end{frame}

